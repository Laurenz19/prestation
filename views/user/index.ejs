<!-- Include _headPage-->
<%- include('../include/_headPage.ejs') %>
    <!-- _headPage included-->

    <div class="main-content container-fluid">
        <div class="page-title">
            <div class="col-md-12">
                <nav aria-label="breadcrumb" class='breadcrumb-header'>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/home">Acceuil</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Utilisateurs</li>
                    </ol>
                </nav>
            </div>
            <div class="col-md-12">
                <h3>
                    Utilisateurs
                </h3>
                <p class="text-subtitle text-muted">
                    <%= description %>
                </p>
            </div>
        </div>
        <section class="section">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">

                    <h4 class="card-title">
                        <%= title%>
                    </h4>
                </div>
                <div class="card-body">
                    <table class='table' id="table1">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Nom et Prénoms</th>
                                <th>Adresse Email</th>
                                <th>Date du création du compte</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (users.length > 0) { %>
                                <% users.forEach(user => { %>

                                    <tr>

                                        <td>
                                            <div class="avatar mr-1">
                                                <img src="/design/docs/assets/images/avatar/avatar-s-1.png" alt="" srcset="">
                                            </div>
                                        </td>
                                        <td>
                                            <%= user.username %>
                                        </td>
                                        <td>
                                            <%= user.email  %>
                                        </td>
                                        <td>
                                            <%= moment(user.createdAt).format('DD/MM/YYYY')%>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% } %>

                        </tbody>
                    </table>
                </div>
            </div>

        </section>

    </div>
    <!-- Include _footPage-->
    <%- include('../include/_footPage.ejs') %>
        <!-- _footPage included-->